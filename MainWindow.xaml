<Window x:Class="PasswordManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager"
        mc:Ignorable="d"
        Background="#0A0B15"
        WindowStyle="None"
        MinWidth="500"
        MinHeight="500"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/Images/logo.png"
        Title="TwentXL Protect" Height="600" Width="950">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0"
                      CornerRadius="0"
                      CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#141625" MouseDown="Titlebar_MouseDown">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0">
                <Image Source="/Assets/Images/logo_light.png" VerticalAlignment="Center" Width="15"/>
                <Label FontSize="12" Grid.Column="0">TwentXL Protect</Label>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Column="2">
                <Button x:Name="ButtonMinimize" Width="40" Style="{StaticResource TitleBar_Button}" Click="ButtonMinimize_Click">
                    <Image Source="/Assets/Images/minimizeIcon.png"/>
                </Button>
                <Button x:Name="ButtonMaximize" Width="40" Style="{StaticResource TitleBar_Button}" Click="ButtonMaximize_Click">
                    <Image Source="/Assets/Images/maximizeIcon.png"/>
                </Button>
                <Button x:Name="ButtonClose" Width="40" Style="{StaticResource TitleBar_Button}" Click="ButtonClose_Click">
                    <Image Source="/Assets/Images/closeIcon.png"/>
                </Button>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="20,0,20,0">
                <Button Style="{StaticResource Button_Link}" Margin="0,0,50,0">Backup</Button>
                <Button Style="{StaticResource Button_Link}" Margin="0,0,50,0">Recovery</Button>
                <Button Style="{StaticResource Button_Link}" Margin="0,0,50,0">Settings</Button>
                <Button Style="{StaticResource Button_Link}" Margin="0,0,50,0">FAQ</Button>
            </StackPanel>
            <Grid Grid.Row="1" MaxWidth="800" x:Name="MainControl" Margin="0,20,0,0" />
        </Grid>

        <Border x:Name="ToastPanel" Grid.Row="1" Background="#1E2033" CornerRadius="10" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,10,0,0" Padding="5" Panel.ZIndex="99" Visibility="Collapsed">
            <Label x:Name="ToastMessage" Content="undefined"/>
        </Border>
        <Grid Grid.Row="1" x:Name="ModalDialog_Area" />
    </Grid>
</Window>
