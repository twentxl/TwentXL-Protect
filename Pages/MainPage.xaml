<UserControl x:Class="PasswordManager.Pages.MainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             xmlns:local="clr-namespace:PasswordManager.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid>
            <TextBox x:Name="SearchBox" Grid.Row="0" Tag="search" Height="40" Width="Auto"/>
            <Button x:Name="SearchButton" HorizontalAlignment="Right" Style="{StaticResource Button_Link}" Margin="0,0,20,0" Height="20" Width="20" Click="Search_Click">
                <svgc:SvgViewbox Source="/Assets/Images/search.svg"/>
            </Button>
            <Button x:Name="SearchCancelButton" HorizontalAlignment="Right" Style="{StaticResource Button_Link}" Margin="0,0,20,0" Height="30" Width="30" Visibility="Collapsed" Click="SearchCancelButton_Click">
                <Image Source="/Assets/Images/closeIcon.png" />
            </Button>
        </Grid>

        <Grid Grid.Row="1" HorizontalAlignment="Right">
            <Button Style="{StaticResource Button_Link}" Width="100" Height="20" Click="AddPassword_Click">+ Add password</Button>
        </Grid>

        <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="DataBlockStackPanel" Orientation="Vertical" />
        </ScrollViewer>
    </Grid>
</UserControl>
