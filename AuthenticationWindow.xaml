<Window x:Class="PasswordManager.AuthenticationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PasswordManager"
        mc:Ignorable="d"
        Background="{DynamicResource WindowBackground}"
        WindowStyle="None"
        MinWidth="400"
        MinHeight="200"
        WindowStartupLocation="CenterScreen"
        Icon="/Assets/Images/logo_protect_light.png"
        Title="TwentXL Protect" MaxHeight="200" MaxWidth="400">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0"
                  CornerRadius="0"
                  CaptionHeight="0"/>
    </WindowChrome.WindowChrome>
    <Border Background="{DynamicResource WindowBackground}" CornerRadius="0" BorderBrush="#979AAD" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Style="{DynamicResource TitleBar}" MouseDown="Titlebar_MouseDown">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0">
                    <Image Style="{DynamicResource Logo}" Margin="0,0,5,0"/>
                    <Image Source="/Assets/Images/logo.png" Width="60" VerticalAlignment="Center"/>
                    <Label FontSize="12">Protect</Label>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Margin="10,10,10,10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="40" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0">
                    <Label Style="{DynamicResource H1}" Content="Enter authentication code" />
                    <TextBox x:Name="Code" Tag="Enter code" Height="40"/>
                    <Label x:Name="ErrorMessage" Content="Wrong code" Foreground="Red" />
                </StackPanel>
                
                <Button Grid.Row="1" Style="{DynamicResource Button_Link}" HorizontalAlignment="Left" FontSize="9">Destroy all</Button>
                <Grid Grid.Row="1" HorizontalAlignment="Right">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="100" />
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0" Style="{DynamicResource Button}" Margin="0,0,20,0" Click="Confirm_Click">Confirm</Button>
                    <Button Grid.Column="1" Style="{DynamicResource ButtonDanger}" Click="Close_Click">Close</Button>
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
